</head>

<body>

    <h1>Cadastro de Cliente</h1>
    <p>Campos com * são obrigatórios.</p>
    <form asp-controller="Cliente" asp-action="Editar" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Nome/Razao Social</label>
            <input type="text" asp-for="Nome" class="form-control" id="inputNome" tooltip="Enter email" maxlength="150">
            @Html.ValidationMessageFor(msg => msg.Nome)
        </div>
        <div class="form-group">
            <label>Email address</label>
            <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail1" maxlength="150" aria-describedby="emailHelp" placeholder="Enter email">
            @Html.ValidationMessageFor(msg => msg.Email)

        </div>
        <div class="form-group">
            <label>Telefone</label>
            <input type="text" asp-for="Telefone" class="form-control telefone" id="inputTel">
            @Html.ValidationMessageFor(msg => msg.Telefone)

        </div>
        <div class="form-group">
            <label>Data Cadastro</label>
            <input type="date" asp-for="DtaCadastro" disabled value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control" id="inputdtaCadastro">
        </div>


        <h3>Informações Pessoais</h3>

        <div class="form-check">
            <input class="form-check-input" asp-for="TipoPessoa" type="radio" name="tipoPessoa" id="Radios1" value="1" checked>
            <label class="form-check-label">
                Pessoa Física
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" asp-for="TipoPessoa" type="radio" name="tipoPessoa" id="Radios2" value="2">
            <label class="form-check-label">
                Pessoa Jurídica
            </label>
        </div>
        <div class="form-group">
            <label for="inputDoc">CNPJ/CPF</label>
            <input type="number" class="form-control" id="inputDoc" asp-for="Documento" maxlength="14">
            @Html.ValidationMessageFor(msg => msg.Documento)

        </div>

        <div class="form-group">
            <label for="inputIE">Inscrição Estadual</label>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Isento" value="true" id="isento">
                <label class="form-check-label">
                    Isento?
                </label>
            </div>
            <input type="number" class="form-control" id="inputIE" asp-for="InscricaoEstadual" maxlength="14">
        </div>

        <!-- pessoa fisica -->
        <label>Gênero:</label>
        <div class="form-check-inline">
            <input class="form-check-input" asp-for="Genero" type="radio" name="genero" id="Radios1" value="F" checked>
            <label class="form-check-label" for="Radios1">
                Feminino
            </label>
        </div>
        <div class="form-check-inline">
            <input class="form-check-input" asp-for="Genero" type="radio" name="genero" id="Radios2" value="M">
            <label class="form-check-label" for="Radios2">
                Masculino
            </label>
        </div>
        <div class="form-check-inline">
            <input class="form-check-input" asp-for="Genero" type="radio" name="genero" id="Radios3" value="O">
            <label class="form-check-label" for="Radios3">
                Outros
            </label>
        </div>

        <div class="form-check">
            <input class="form-check-input" asp-for="Bloqueio" type="checkbox" value="true" id="bloqueio">
            <label class="form-check-label">
                Cliente Bloqueado?
            </label>
        </div>
        <br />
        <div class="form-group">
            <label>Senha</label>
            <input type="password" asp-for="Senha" class="form-control" id="InputPassword1" placeholder="Password">
            @Html.ValidationMessageFor(msg => msg.Senha)

            <small>*A senha deve conter no mínimo 8 caracteres e no máximo 15.</small>
        </div>

        <div class="form-group">
            <label for="InputPassword2">Confirmar Senha</label>
            <input type="password" class="form-control" id="InputPassword2" placeholder="Confirmar Senha" onkeyup="checkPasswordMatch();">
            <small id="passwordMatchMessage"></small>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a class="btn btn-secondary ml-2" asp-controller="Home" asp-action="Index" role="button">Voltar</a>
        </div>

    </form>


</body>

